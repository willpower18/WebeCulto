@model AdminEAD.Models.Culto

@{
    ViewData["Title"] = "Cultos";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Deletar Culto</h6>
    </div>
    <div class="card-body">
        @Html.Raw(ViewBag.AlertMessage)
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nome)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nome)
            </dd>
            <dt class="col-sm-2">
                Data e Hora
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DataHora)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Preletor)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Preletor)
            </dd>
            <dt class="col-sm-2">
                Igreja
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.IdIgrejaNavigation.Nome)
            </dd>
        </dl>

        <form asp-action="Delete">
            <input type="hidden" asp-for="IdCulto" />
            <input type="submit" value="Delete" class="btn btn-danger" />
            <a asp-action="Index" class="btn btn-secondary">Voltar</a>
        </form>
    </div>
</div>
