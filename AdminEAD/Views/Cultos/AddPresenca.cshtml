@model AdminEAD.Models.Participacao

@{
    ViewData["Title"] = "Participacao";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Inserir Participante no Culto</h6>
    </div>
    <div class="card-body">
        @Html.Raw(ViewBag.AlertMessage)
        <div class="col-md-4">
            <form asp-action="Create">
                <p>Campos de Preenchimento Obrigatório <i class="text-danger">*</i></p>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="IdCulto" class="control-label"></label>
                    <select asp-for="IdCulto" class="form-control" asp-items="ViewBag.IdCulto"></select>
                </div>
                <div class="form-group">
                    <label asp-for="Nome" class="control-label"></label>
                    <input asp-for="Nome" class="form-control" />
                    <span asp-validation-for="Nome" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Telefone" class="control-label"></label>
                    <input asp-for="Telefone" class="form-control" />
                    <span asp-validation-for="Telefone" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ChaveApp" class="control-label"></label>
                    <input asp-for="ChaveApp" class="form-control" />
                    <span asp-validation-for="ChaveApp" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QtdCriancas" class="control-label"></label>
                    <input asp-for="QtdCriancas" class="form-control" />
                    <span asp-validation-for="QtdCriancas" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="QtdAdultos" class="control-label"></label>
                    <input asp-for="QtdAdultos" class="form-control" />
                    <span asp-validation-for="QtdAdultos" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>
</div>