@model AdminEAD.Models.Culto

@{
    ViewData["Title"] = "Cultos";
}

<div class="card shadow mb-4">
    <div class="card-header py-3">
        <h6 class="m-0 font-weight-bold text-primary">Novo Culto</h6>
    </div>
    <div class="card-body">
        @Html.Raw(ViewBag.AlertMessage)
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <p>Campos de Preenchimento Obrigatório <i class="text-danger">*</i></p>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="IdIgreja" class="control-label"><b>Igreja</b> <i class="text-danger">*</i></label>
                        <select asp-for="IdIgreja" class="form-control" asp-items="ViewBag.IdIgreja"></select>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"><b>Nome do Evento</b> <i class="text-danger">*</i></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="DataHora" class="control-label"><b>Data e Hora</b> <i class="text-danger">*</i></label>
                        <input asp-for="DataHora" class="form-control" />
                        <span asp-validation-for="DataHora" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Preletor" class="control-label"><b>Preletor</b> <i class="text-danger">*</i></label>
                        <input asp-for="Preletor" class="form-control" />
                        <span asp-validation-for="Preletor" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <input type="hidden" asp-for="Lotacao" class="form-control" value="0" />
            @if (Model != null)
            {
                if (Model.IdCulto > 0)
                {
                    <div class="form-actions left">
                        <a href="/Cultos/Edit/@Model.IdCulto" class="btn btn-secondary">
                            <i class="fa fa-pencil"></i>  Editar Informações
                        </a>
                        <a asp-controller="Cultos" asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                }
                else
                {
                    <div class="form-actions left">
                        <button type="submit" class="btn btn-success">
                            <i class="fa fa-check"></i> Salvar
                        </button>
                        <a asp-controller="Cultos" asp-action="Index" class="btn btn-secondary">Voltar</a>
                    </div>
                }
            }
            else
            {
                <div class="form-actions left">
                    <button type="submit" class="btn btn-success">
                        <i class="fa fa-check"></i> Salvar
                    </button>
                    <a asp-controller="Cultos" asp-action="Index" class="btn btn-secondary">Voltar</a>
                </div>
            }
        </form>
    </div>
</div>
